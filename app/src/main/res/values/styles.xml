<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- App Theme Color Palette. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="homeAsUpIndicator">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- App Button Theme red -->
    <style name="AppDefaultButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/blueberry</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>
    <!-- App Button Theme orange -->
    <style name="AppOrangeButton" parent="AppDefaultButton">
        <item name="android:background">@drawable/orange_round_corner</item>
    </style>

    <!-- App Button Theme orange -->
    <style name="AppPurpleButton" parent="AppDefaultButton">
        <item name="android:background">@drawable/purple_round_corner</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

</resources>