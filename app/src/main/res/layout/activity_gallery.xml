<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryActivity"
    android:background="@drawable/fondo_amarillo">

    <include
        android:id="@+id/include"
        layout="@layout/app_bar_main" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gridGallery"
        android:layout_width="413dp"
        android:layout_height="478dp"
        android:layout_marginTop="52dp"
        android:padding="20dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <Button
        android:id="@+id/carrete"
        style="@style/AppPurpleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="500dp"
        android:onClick="setListeners"
        android:text="GalerÃ­a"
        app:layout_constraintEnd_toStartOf="@+id/camara"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gridGallery" />

    <ImageButton
        android:id="@+id/camara"
        style="@style/AppPurpleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="56dp"
        android:onClick="onImageFromCameraClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gridGallery"
        app:srcCompat="@android:drawable/ic_menu_camera" />

</androidx.constraintlayout.widget.ConstraintLayout>