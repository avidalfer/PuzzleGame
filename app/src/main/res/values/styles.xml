<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- App Theme Color Palette. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="homeAsUpIndicator">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- App Button Theme red -->
    <style name="AppWhiteBtn">
        <item name="android:background">@drawable/btn_white_states</item>
    </style>

    <style name="AppRedButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">10dp</item>
        <item name="android:fontFamily">@font/blueberry</item>
        <item name="android:background">@drawable/btn_red_states</item>
    </style>
    <!-- App Button Theme orange -->
    <style name="AppOrangeButton" parent="AppRedButton">
        <item name="android:background">@drawable/btn_orange_states</item>
    </style>

    <!-- App Button Theme purple -->
    <style name="AppPurpleButton" parent="AppRedButton">
        <item name="android:background">@drawable/btn_purple_states</item>
    </style>

    <!-- smallbuttons -->
    <style name="SmallPurpleButton" parent="AppPurpleButton">
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:textSize">11.5sp</item>
        <item name="android:background">@drawable/btn_purple_states</item>
    </style>


    <!-- Credit titles -->
    <style name="CreditTitlesText">
        <item name="android:fontFamily">@font/blueberry</item>
        <item name="android:textSize">26sp</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="AppDefaultButton">AppDefaultButton</style>

    <style name="RegularText">
        <item name="android:fontFamily">@font/alefregular</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>