<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- App Theme Color Palette. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="homeAsUpIndicator">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- App Button Theme red -->
    <style name="AppRedButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/blueberry</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>
    <!-- App Button Theme orange -->
    <style name="AppOrangeButton" parent="AppRedButton">
        <item name="android:background">@drawable/orange_round_corner</item>
    </style>

    <!-- App Button Theme purple -->
    <style name="AppPurpleButton" parent="AppRedButton">
        <item name="android:background">@drawable/purple_round_corner</item>
    </style>

    <!-- smallbuttons -->
    <style name="SmallPurpleButton" parent="AppPurpleButton">
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:textSize">11.5sp</item>
        <item name="android:background">@drawable/purple_round_corner</item>
    </style>
    76 28 11.5


    <!-- Credit titles -->
    <style name="CreditTitlesText">
        <item name="android:fontFamily">@font/blueberry</item>
        <item name="android:textSize">26sp</item>
        <item name="android:background">#EA8894</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="AppDefaultButton">AppDefaultButton</style>

</resources>